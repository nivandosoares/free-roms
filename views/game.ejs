<% if (game != null){ %>

    <nav aria-label="breadcrumb">
        <ol class = "breadcrumb">
            <li class = "breadcrumb-item"><a href = "/">Home</a></li>
            <li class = "breadcrumb-item active" aria-current="page"><%- game.name %> </li>
        </ol>
    </nav>

    <% const imageSrc = (game.image && game.image.startsWith('http')) ? game.image : `/uploads/${game.image}`; %>

    <div class = "row">
        <div class = "col-12 col-md-4">
            <img src = "<%= imageSrc %>" class = "img-fluid sticky-top" style="top: 20px;" alt="<%- game.name %>" loading = "lazy">
        </div>

        <div class = "col-12 col-md-8">
            <div class = "col-12"><h1><%- game.name  %> </h1></div>
            <div class = "col-12 mb-4"><i class="fas fa-tag"></i> <%- game.category%> </div>
            <div class = "col-12 mb-3" style="white-space: pre-line;">
                <h4>About</h4>
                <%- game.description %>
            </div>
            <div class = "col-12 mb-4" style="white-space: pre-line;">
                <h4>Shared by</h4>
                <%- game.shared_by  %>
            </div>
            <div class="col-12 mb-4">
              <small class="text-muted">Downloads: <%= game.downloadCount || 0 %></small>
            </div>
        </div>

        <div class = "d-grid gap-2 d-sm-flex justify-content-sm-center">
            <a href = "/download/<%= game._id %>" class = "btn btn-primary btn-dark btn-lg">Download ROM</a>
        </div>
    </div>
<% } %>
