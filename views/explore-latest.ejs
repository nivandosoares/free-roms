<h1 class="pb-4">Latest Uploads</h1>

<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
  <% if (Array.isArray(Games) && Games.length > 0){ %>
    <% Games.forEach(function(game){ %>
      <a href="/game/<%- game._id %>" class="col text-center category__link">
        <div class="category__img category__img--large shadow">
          <img src="<%= game.image && game.image.startsWith('http') ? game.image : `/uploads/${game.image}` %>" alt="<%- game.name %>" loading="lazy" />
        </div>
        <div class="pt-1"><%- game.name %></div>
      </a>
    <% }) %>
  <% } else { %>
    <p>No items found.</p>
  <% } %>
</div>
